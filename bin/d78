#!/bin/bash
BASE_DIR=$(dirname $(dirname $0))
case _$1 in
_hgrc)
   hgrc_content=
   if [ -e $HOME/.hgrc ]; then
      hgrc_content=`grep "^username" $HOME/.hgrc`
      [ ! -z "$hgrc_content" ] && hgrc_content="[ui]\n$hgrc_content"
   fi
   hgrc_content="$hgrc_content\n\n%include ${BASE_DIR/$HOME\//}/hgrc78"
   echo "# This should be in ~/.hgrc"
   echo -e $hgrc_content
;;
_update)
git -C $BASE_DIR pull
;;
*)
echo "Usage: `basename $0` update|hgrc"
[ ! -z $1 ] && exit 1
;;
esac